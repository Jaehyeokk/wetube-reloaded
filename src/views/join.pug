extends layouts/default

block content
  if errorMessage
    h3=errorMessage
  form(method="POST")
    input(name="email", placeholder="e-mail", type="text", required: true)
    input(name="username", placeholder="Username", type="text", required: true)
    input(name="name", placeholder="name", type="text", required: true)
    input(name="password", placeholder="password", type="password", required: true)
    input(name="password2", placeholder="password2", type="password", required: true)
    input(name="location", placeholder="location", type="text", required: true)
    input(type="submit", value="Join")