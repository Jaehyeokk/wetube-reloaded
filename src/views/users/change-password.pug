extends ../base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="oldPassword", placeholder="Old password", type="password")
    input(name="newPassword", placeholder="New password", type="password")
    input(name="newPasswordConfirmation", placeholder="New password Confirm", type="password")
    input(type="submit", value="Change Password")