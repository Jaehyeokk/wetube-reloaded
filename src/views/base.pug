doctype html
html(lang="ko")

  head
    link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    title #{pageTitle} | Wetube

  body
    h1=pageTitle

    header
      nav
        ul
          li
            a(href='/') Home
          li
            a(href='/videos/upload') Upload Video
          li
            a(href='/search') Search
          if !loggedIn
            li
              a(href='/join') Join
            li
              a(href='/Login') Login
          else
            li
              a(href='/logout') Log Out
            li
              a(href='/my-profile') #{loggedInUser.name}의 프로필
    main 
      block content
  include partials/footer