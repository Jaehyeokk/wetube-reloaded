extends layouts/default

block content
  if errorMessage
    h3=errorMessage

  form(method="POST")
    input(name="username", placeholder="Username", type="text", required: true)
    input(name="password", placeholder="password", type="password", required: true)
    input(type="submit", value="Login")
  
  a(href="/users/github/start") Github Login &rarr; 