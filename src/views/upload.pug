extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File 
    input(name="video", id="video", type="file", accept="video/*", required)
    input(name="title" placeholder="Title", required, type="text" minlength="5" maxlength="30")
    input(name="description" placeholder="Description", required, type="text", minlength="20" maxlength="140")
    input(name="hashtags" placeholder="Hashtags, seperated by comma", required, type="text")
    input(type="submit", value="Upload Video")